@using X.PagedList
@using X.PagedList.Mvc.Core
@model BrandIndexVM


<div class="d-flex flex-column justify-content-start align-items-center w-100">
    <h2 class="w-100 mb-4">Brand List</h2>

    <table class="table table-bordered w-100">
        <thead class="w-100">
            <tr class="w-100 d-flex justify-content-center align-items-center">
                <th class="table-data p-2">ID</th>
                <th class="table-data p-2">Name</th>
                <th class="table-data ps-4">Actions</th>
            </tr>
        </thead>
        <tbody class="w-100">
            @foreach (var brand in Model.Brands)
            {
                <tr class="w-100 d-flex justify-content-between align-items-center">
                    <td class="table-data d-flex justify-content-start align-items-center">@brand.Id</td>
                    <td class="table-data d-flex justify-content-start align-items-center">@brand.Name</td>
                    <td class="table-data d-flex justify-content-end align-items-start">
                        <a class="btn btn-warning" asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id">Edit</a>
                        <a class="btn btn-danger ms-1" asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagination-container">
        @Html.PagedListPager(Model.Brands, page => Url.Action("Index", new { page }))
    </div>
    <a class="btn btn-info mt-3" asp-controller="Brand" asp-action="Add">Add Brand</a>
</div>


