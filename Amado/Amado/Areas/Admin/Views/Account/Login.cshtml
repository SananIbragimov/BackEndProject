@model AccountLoginVM

@{
    Layout = "_LoginLayout";
}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url('/Admin/images/login-bg.jpg');">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign In</h3>
                            </div>
                        </div>
                        <form asp-controller="Account" asp-action="Login" method="post" class="signin-form">
                            <div class="form-group mb-3">
                                <label class="label" for="name">Username</label>
                                <input asp-for="Email" class="form-control" placeholder="Username" required>
                                <span asp-validation-for="Email" style="color: red;"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Password" required>
                                <span asp-validation-for="Password" style="color: red;"></span>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-4">
                                        Remember Me
                                        <input asp-for="RememberMe" type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                            </div><br />
                            @if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
                            {
                                <span style="color: red;">@Model.ErrorMessage</span>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
       <partial name="_ValidationScriptsPartial" />
}



