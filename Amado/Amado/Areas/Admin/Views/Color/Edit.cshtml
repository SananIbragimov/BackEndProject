@model ColorEditVM

<div class="d-flex flex-column justify-content-start align-items-start g-10 w-100 ms-3">
    <h2 class="align-self-start">Update Color</h2>

    <form asp-controller="Color" asp-action="Edit" method="post" class="w-100">
        <div class="form-group">
            <label for="name" class="control-label">Please enter color name:</label>
            <input asp-for="Name" class="form-control border mb-3 p-2 w-25" id="name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="color" class="control-label">Please choose the color:</label>
            <input asp-for="HexCode" type="color" class="form-control border mb-3 p-2 w-25" id="color" />
            <span asp-validation-for="HexCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Update</button>
            <br />
        </div>
    </form>
    <br /> <br />
    <a asp-controller="Color" asp-action="Index">Back to ColorList</a>
</div>


