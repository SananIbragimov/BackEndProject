<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>
        Admin Panel
    </title>

    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
          href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />

    <!-- Nucleo Icons -->
    <link href="/Admin/Home/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/Admin/Home/assets/css/nucleo-svg.css" rel="stylesheet" />

    <!-- Material Icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- CSS Files -->

    <link href="/Admin/Home/assets/css/material-dashboard.css?v=3.1.0" rel="stylesheet" />


</head>

<body class="g-sidenav-show bg-gray-100 d-flex">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl fixed-start bg-gradient-dark"
           id="sidenav-main" style="overflow: hidden; height: 100vh;">

        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none"
               aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0">
                <div class="text-white text-center me-2 d-flex align-items-center justify-content-start">
                    <span class="material-symbols-outlined">
                        admin_panel_settings
                    </span>
                    <span class="ms-2 font-weight-bold text-white fs-5">Admin Panel</span>
                </div>
            </a>
        </div>


        <hr class="horizontal light mt-0 mb-2">

        <div class="collapse navbar-collapse" id="sidenav-collapse-main" style="overflow-y: hidden; height: 100%;">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link text-white " asp-controller="Home" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                home
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Home Page</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Product" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                grocery
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Products</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link text-white " asp-controller="Category" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                category
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Categories</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Brand" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                branding_watermark
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Brands</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Color" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                palette
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Colors</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Subscribe" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                subscriptions
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Subscribes</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Checkout" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                fact_check
                            </span>
                        </div>

                        <span class="nav-link-text ms-1">Checkout</span>
                    </a>
                </li>

               
                <li class="nav-item mt-5">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">User account</h6>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <span class="material-symbols-outlined">
                                logout
                            </span>
                        </div>
                        <span class="nav-link-text ms-1">Logout</span>
                    </a>
                </li>
            </ul>
        </div>



        </div>

    </aside>
    @RenderBody()
</body>
@RenderSection("Scripts", false)
</html>
