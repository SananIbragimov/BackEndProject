@model CategoryAddVM

<div class="d-flex flex-column justify-content-start align-items-start g-10 w-100 ms-3">
    <h2 class="align-self-start">Create Category</h2>

    <form asp-controller="Category" asp-action="Add" method="post" class="w-100">
        <div class="form-group">
            <label for="name" class="control-label">Please enter category name:</label>
            <input asp-for="Name" class="form-control border mb-3 p-2 w-25" id="name" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Add</button>
            <br />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </form>
    <br /> <br />
    <a asp-controller="Category" asp-action="Index">Back to CategoryList</a>
</div>
